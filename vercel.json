{
  "version": 2,
  "functions": {
    "app.py": {
      "runtime": "python3.9",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": ["templates/**", "static/**", "utils/**", "routes/**", "models.py", "extensions.py", "config.py"],
      "excludeFiles": [
        "tests/**",
        "deployment/**",
        "*.md",
        "*.txt",
        "*.sh",
        "*.pyc",
        "__pycache__/**",
        ".git/**",
        ".github/**",
        "uploads/**"
      ]
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "SECRET_KEY": "umscc-permit-system-secret-key-2025-production",
    "DATABASE_URL": "sqlite:///permit_system.db"
  }
}
