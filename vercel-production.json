{
  "name": "umscc-permit-system",
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9",
        "excludeFiles": [
          "tests/**",
          "docs/**",
          "*.md",
          ".git/**",
          "node_modules/**",
          "__pycache__/**",
          "*.pyc",
          ".pytest_cache/**",
          "*.log"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "x-frame-options": "DENY",
        "x-content-type-options": "nosniff"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "functions": {
    "app.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "FLASK_ENV": "production",
    "SECRET_KEY": "@secret_key",
    "DATABASE_URL": "@database_url"
  },
  "build": {
    "env": {
      "PYTHONPATH": "."
    }
  }
}
