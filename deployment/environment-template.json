{
  "environment_variables": {
    "required": {
      "SECRET_KEY": {
        "description": "Flask secret key for session security",
        "example": "your-super-secret-key-here-minimum-32-chars",
        "critical": true
      },
      "DATABASE_URL": {
        "description": "PostgreSQL database connection string",
        "example": "postgresql://username:password@host:port/database",
        "critical": true
      },
      "AWS_ACCESS_KEY_ID": {
        "description": "AWS access key for S3 storage",
        "example": "AKIAIOSFODNN7EXAMPLE",
        "critical": true
      },
      "AWS_SECRET_ACCESS_KEY": {
        "description": "AWS secret key for S3 storage",
        "example": "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY",
        "critical": true
      },
      "AWS_S3_BUCKET_NAME": {
        "description": "S3 bucket name for document storage",
        "example": "umscc-permit-documents",
        "critical": true
      }
    },
    "optional": {
      "AWS_REGION": {
        "description": "AWS region for S3 bucket",
        "default": "us-east-1"
      },
      "FLASK_ENV": {
        "description": "Flask environment setting",
        "default": "production"
      },
      "LOG_LEVEL": {
        "description": "Application logging level",
        "default": "INFO"
      }
    }
  },
  "deployment_notes": {
    "database": "Create PostgreSQL database before deployment",
    "storage": "Set up AWS S3 bucket with proper CORS configuration",
    "security": "Ensure all secret keys are properly generated and secure"
  }
}
